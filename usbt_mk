all:	usbtest	

CC	:= gcc
LD	:= gcc
INCLUDE	:= .

#DEFINE += -DACS_READER
DEFINE :=

CFLAGS	:= -g -I${INCLUDE} -fms-extensions -DLIBUSB_10 ${DEFINE} 
LDFLAGS	:= -lnsl -lm -lc -lusb1.0

objs :=	ccid_cmd.o \
	cunit.o    \
	misc.o     \
	usbtest.o

src :=	ccid_cmd.c \
	cunit.c    \
	misc.c     \
	usbtest.c 

usbtest: ${objs}
	${LD} ${LDFLAGS} ${objs} -o usbtest

$(objs): %.o:%.c
	$(CC) $(CFLAGS) -o $@ -c $<

.PHONY:	all clean

clean:
	-rm -f *.o
	-rm -f usbtest
