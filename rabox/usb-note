usb/core/usb.c
--------------
usb_init()
	bus_register(usb_bus_type);
	bus_register_notify(nb);	/* for add/remove sysfs node */
	usb_host_init();
	usb_major_init();
	usb_register(usbfs_driver);	/* register a interface driver */
	usb_devio_init();
	usbfs_init();			/* bus/usb node */
	usb_hub_init();
	  usb_reigster(hub_driver);	/* register a interface driver */
	usb_register_device_driver(generic);	/* register a generic device driver */

